<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0277BD"
    android:layout_weight="30"
    android:soundEffectsEnabled="true"
    android:padding="20dp"
    android:showDividers="end"
    android:dividerPadding="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp"
        android:weightSum="90"
        android:background="@android:color/white"
        android:showDividers="middle"
        android:dividerPadding="1dp"
        android:divider="@drawable/divide"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <Button
            android:id="@+id/btTopMakeComplain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/b_2_pressed"
            />
        <Button
            android:id="@+id/btTopTrackCase"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/b_1_pressed"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/b_3_pressed"
            />
    </LinearLayout>
</LinearLayout>

