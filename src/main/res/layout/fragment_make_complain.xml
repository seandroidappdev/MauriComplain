<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidhive.info.materialdesign.activity.MakeComplainFragment"
    >
   <include
       layout="@layout/header"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="49"
            android:scaleType="fitXY"
            android:background="@drawable/d_1_pressed"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="49"
            android:scaleType="fitXY"
            android:background="@drawable/d_2_pessed"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="49"
            android:scaleType="fitXY"
            android:background="@drawable/d_3_pressed"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="49"
            android:scaleType="fitXY"
            android:background="@drawable/d_4_pressed"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="49"
            android:scaleType="fitXY"
            android:background="@drawable/d_5_pressed"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="49"
            android:scaleType="fitXY"
            android:background="@drawable/d_6_pressed"
            android:soundEffectsEnabled="true"
            />
    </LinearLayout>
    <Button
        android:id="@+id/ivRound"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="-150dp"
        android:soundEffectsEnabled="true"
        android:background="@drawable/d_round_pressed"
        />
</LinearLayout>